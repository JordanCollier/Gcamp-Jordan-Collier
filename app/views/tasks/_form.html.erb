<%= form_for(@task, html: {:class => "form-horizontal"}) do |f| %>
<% if @task.errors.any? %>
<div id="error_explanation", class="alert alert-danger">
  <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

  <ul>
    <% @task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="form-group">
  <div class="field">
    <%= f.label :description, :class => 'control-label col-md-2' %>

    <div class='form-controls col-md-4'>
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
  </div>
</div>


<div class="form-group">
  <div class="field">
    <%= f.label :due_date, :class => 'control-label col-md-2' %>

    <div class='form-controls col-md-4'>
      <%= f.date_select :due_date, :class => 'form-control' %>
    </div>
  </div>
</div>

<% unless @task.description == nil %>
<div class="form-group">
  <div class="col-md-offset-1 col-md-1">
    <b>Completed</b>
  </div >
  <div class="col-md-4">
  <%= f.check_box(:complete) %>
    </div>

</div>
<% end %>


<div class="form-group">
  <div class="col-md-offset-2 col-md-4">
    <%= f.submit @submit_name, :class => 'btn btn-primary'%>
    <%= link_to 'cancel', tasks_path, class: 'btn btn-default'%>
  </div>
</div>

<% end %>
