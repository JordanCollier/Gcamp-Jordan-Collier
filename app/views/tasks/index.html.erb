<div class="page-header">
  <div class="pull-right">
    <%= link_to "New Task", new_project_task_path, class: "btn btn-info" %>
  </div>
<h1>Tasks</h1>
</div>

<ol class="breadcrumb">
  <li><a href="/projects">projects</a></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li>Tasks</li>

</ol>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due on</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
      <tr>
        <td>
        <%= task.description%>
        </td>
        <td>
          <%= task.date %>
        </td>
        <td class="text-right">
        <%# link_to 'Edit', edit_project_task_path(task.project), :class => "btn btn-info"  %>

        <%# link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
