<div class="page-header">
  <div class="pull-right  ">
  <%= link_to 'Edit', edit_project_path, :class => "btn btn-info"  %>
</div>
  <h1><%= @project.name %></h1>
</div>

<ol class="breadcrumb">
  <li><a href="/projects">projects</a></li>
  <li class="active"><%= @project.name %></li>
</ol>

<p><%= link_to "#{@project.tasks.all.count} Tasks", project_tasks_path(@project) %></p>
<p><%= link_to "#{@project.memberships.all.count} Members", project_memberships_path(@project) %></p>
<!-- <dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%# @project.name %></dd>
</dl> -->

<div class="well">
  <h4>Delete Projects</h4>
  <p>
    Deleting this project will also delete <%= pluralize @project.memberships.count, "membership" %>, and <%= pluralize @project.tasks.count, "task" %> and associated comments.
  </p>
  <%= link_to 'Delete', project_path, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>

</div>
