<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" href="/projects/new">Create Project </a>
  </div>
<h1>projects</h1>
</div>

<table class="table table-striped table-hover">

  <!-- <colgroup>
    <col class="col-xs-2">
    <col class="col-xs-7">
  </colgroup> -->


  <thead>
    <tr>
      <th>Name</th>
      <th>Tasks</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project  %></td>
        <td><%= link_to project.tasks.all.count, project_tasks_path(project)  %></td>


        <td class="text-right">
        <%= link_to 'Edit', edit_project_path(project), :class => "btn btn-info"  %>

        <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
